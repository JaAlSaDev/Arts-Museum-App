<div class="container">
    <h1 class="mt-4 mb-3"></h1>
    <div class="row justify-content-md-center">
        <div class="col-lg-7 col-sm-6 art-item">
            <div class="card h-100">

                <form method="POST" action="/artitems/search">
                    <h4 class="card-header text-center">Search</h4>

                    <div class="card-body">
                        <div class="controls">
                            <label>By Artist: </label>
                            <select class="form-control" name="artistName" id="">
                                <option value="None" selected="selected">None</option>
                                <%artistNames.forEach(function(artitem){ %>
                                <option value="<%=artitem%>"><%=artitem%></option>
                                <%})%>
                            </select>
                            <p class="help-block"></p>
                        </div>
                        <div class="controls">
                            <label>By Year:</label>
                            <select class="form-control" name="year" id="">
                                <option value="None" selected="selected">None</option>
                                <% years.forEach(function(year){ %>
                                <option value="<%=year%>"><%=year%></option>
                                <%})%>
                            </select>
                            <p class="help-block"></p>
                        </div>
                        <div class="controls">
                            <label>By Location:</label>
                            <select class="form-control" name="location" id="">
                                <option value="None" selected="selected">None</option>
                                <% locations.forEach(function(location){ %>
                                <option value="<%=location%>"><%=location%></option>
                                <%})%>
                            </select>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-info btn-block" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

