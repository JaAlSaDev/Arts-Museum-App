<div class="container">
    <h1 class="mt-4 mb-3">Art Item:</h1>


    <div class="text-center">
        <div class="row">

            <div class="col-lg-8 col-sm-6 art-item">
                <div class="card h-100">
                    <img class="card-img-top" src="<%=artitem.imgSrc%>" height="300" width="400">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <h4 class="card-title"><%=artitem.name%></h4>
                            <li class="list-group-item">Artist: <%=artitem.artistName%></li>
                            <li class="list-group-item">Description: <%=artitem.description%></li>
                            <li class="list-group-item">Year: <%=artitem.year%></li>
                            <li class="list-group-item">Location: <%=artitem.location%></li>
                        </ul>
                    </div>

                    <div class="card-footer text-center">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <% if (currentUser && currentUser.type == "admin") { %>
                                    <a class="btn btn-info btn-block" href="/artitems/<%= artitem._id %>/edit">Edit</a>
                                </div>

                                <div class="col-sm">
                                    <form method="POST" action="/artitems/<%= artitem._id %>/delete?_method=DELETE">
                                        <button class="btn btn-info btn-block" type="submit"
                                            value="DELETE">Delete</button>
                                    </form>
                                    <% } %>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>