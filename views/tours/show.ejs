<div class="container">
    <h1 class="mt-4 mb-3"></h1>
    <div class="row justify-content-md-center">
        <div class="col-lg-8 col-sm-6 art-item">
            <div class="card h-100">
                <h4 class="card-header text-center">Tour Details</h4>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Title: <%= tour.title %></li>
                        <li class="list-group-item">Description: <%= tour.description %></li>
                        <li class="list-group-item">Tour Guide: <%=tour.tourGuide.firstName%>
                            <%=tour.tourGuide.lastName%></li>
                        <li class="list-group-item">Date: <%= tour.date %></li>
                    </ul>
                </div>

                <div class="card-footer text-center">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm">
                                <% if (currentUser && currentUser.type == "admin") { %>
                                <a class="btn btn-info btn-block" href="/tours/<%= tour._id %>/edit">Edit</a>
                            </div>
                            <div class="col-sm">
                                <form method="POST" action="/tours/<%= tour._id %>/delete?_method=DELETE">
                                    <button class="btn btn-info btn-block" type="submit" value="DELETE">Delete</button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>